@using _50_Ders_MVC_Projesi.Models.Entities
@model List<Client>
@{
    ViewBag.Title = "Müşteriler";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Client", FormMethod.Get))
{
    <b>Muşteri Adı : </b> @Html.TextBox("parameter")
    <button class="btn btn-primary" type="submit">
        <i class="fa-sharp fa-solid fa-magnifying-glass"></i>
        Ara
    </button>
}


<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>MÜŞTERİ ID</th>
            <th>MÜŞTERİ AD</th>
            <th>MÜŞTERİ SOYAD</th>
            <th>SİL</th>
            <th>GÜNCELLEME</th>
            <th>ALERT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <th>@client.MUSTERIID</th>
                <td>@client.MUSTERIAD</td>
                <td>@client.MUSTERISOYAD</td>
                <td><a href="/Client/Delete/@client.MUSTERIID" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Sil</a></td>
                <td><a href="/Client/Update/@client.MUSTERIID" class="btn btn-success"><i class="fas fa-edit me-1"></i>Güncelle</a></td>
                <td>
                    @Html.ActionLink("Silme Butonu", "Delete", new { id = client.MUSTERIID }, new { @class = "btn btn-warning text-danger", onclick = "return confirm('Gerçekten Silmek İster mısınız?')" })
                </td>
            </tr>
        }
    </tbody>

</table>
<a href="/Client/Create" class="btn btn-primary">
    <i class="fas fa-plus me-1"></i>Yeni Müşteri Ekle
</a>